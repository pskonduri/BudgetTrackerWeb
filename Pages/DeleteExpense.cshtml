@page "{id:int}"
@model DeleteExpenseModel

<h2>Delete Expense</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this expense?</p>
    <ul>
        <li><strong>Amount:</strong> @Model.Expense.Amount</li>
        <li><strong>Category:</strong> @Model.Expense.Category</li>
        <li><strong>Date:</strong> @Model.Expense.Date.ToShortDateString()</li>
    </ul>
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Expenses" class="btn btn-secondary">Cancel</a>
</form>

